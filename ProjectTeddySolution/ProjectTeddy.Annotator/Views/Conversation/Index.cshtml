        <script asyncsrc="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
    <div class="col-md-6">

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    Enter a sample response and define sentence type below
                </div>
            </div>
            <div class="panel-body">

                    <div class="form-group">
                        <textarea class="form-control" rows="3" placeholder="Enter Response Here"></textarea>
                    </div>

                    <div class="form-group">
                        <div class="radio">
                            <label>
                                <input type="radio" name="conversationRadios" id="optionsRadios1" value="Declarative" data-toggle="tooltip" data-placement="right" title="Tooltip on right">
                                Declarative
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="conversationRadios" id="optionsRadios2" value="Imperative">
                                Imperative
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="conversationRadios" id="optionsRadios3" value="Exclamatory">
                                Exclamatory
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="conversationRadios" id="optionsRadios4" value="Interrogative">
                                Interrogative
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="conversationRadios" id="optionsRadios5" value="Probing">
                                Probing
                            </label>
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary">Submit</button>
                    </div>

            </div>
            <!-- end panel content -->
        </div>
        <!-- end panel -->
    </div>
</div>
